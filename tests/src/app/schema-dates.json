{
	"$schema": "http://json-schema.org/draft-04/hyper-schema#",
	"type": "object",
	"required": ["fromDateUtc", "toDateUtc"],
	"properties": {
		"fromDateUtc": {
			"title": "Start Date",
			"type": "string",
			"widget": "date",
			"format": "date",
			"htmlClass": "mandatory",

			"showWeekNumber": true,
			"min": "%TODAY%",
			"max": "/toDateUtc"
		},
		"toDateUtc": {
			"title": "End Date",
			"type": "string",
			"widget": "date",
			"format": "date",
			"htmlClass": "mandatory",

			"showWeekNumber": true,
			"min": "/fromDateUtc",
			"max": "%TODAY%"
		}
	}
}
